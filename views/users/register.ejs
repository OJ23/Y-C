<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <% layout('./layouts/boilerplate') %>
    <h1>USER</h1>
    <form action="/register" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label" for="Username">Username:</label>
                <textarea class="form-control" type="text" id= "Username" name="username" required></textarea>
                <div class="valid-feedback">
                    "looks good!"
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="Password">Password:</label>
                <textarea class="form-control" type="text" id= "Password" name="password" required></textarea>
                <div class="valid-feedback">
                    "looks good!"
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="Email">Email:</label>
                <textarea class="form-control" type="text" id= "Email" name="email" required></textarea>
                <div class="valid-feedback">
                    "looks good!"
                </div>
            </div>
            <button class="btn btn-success">REGISTER</button>
    </form>
</body>
</html>